generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id       Int    @id  @default(autoincrement())
  username String @unique
  password String
  fechaCreacion DateTime @default(now())
}

model Solicitud {
  id      Int    @id  @default(autoincrement())
  titulo  String
  descripcion String
  categoria Categoria
  estatus Estatus
  fechaCreacion DateTime @default(now())
  usuarioSolicitante String
}

enum Categoria {
  Permiso
  Compra
  Soporte
}

enum Estatus {
  Pendiente
  En_Proceso
  Finalizada
}